<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<system.serviceModel>
    <!-- Définition des services exposés -->
    <services>
      <service name="MapProject.Services.ProxyService">
        <!-- Endpoint principal avec BasicHttpBinding -->
        <endpoint 
          address="" 
          binding="basicHttpBinding" 
          contract="MapProject.Services.IProxyService" />
        <!-- Endpoint pour l'échange de métadonnées (mex) -->
        <endpoint 
          address="mex" 
          binding="mexHttpBinding" 
          contract="IMetadataExchange" />
        <!-- Adresse de base du service -->
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/ProxyService" />
          </baseAddresses>
        </host>
      </service>
    </services>

    <!-- Définition des comportements des services -->
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- Activation des métadonnées -->
          <serviceMetadata httpGetEnabled="true" />
          <!-- Inclusion des détails des exceptions dans les messages -->
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>

    <!-- Configuration des diagnostics pour enregistrer les messages -->
    <diagnostics>
      <messageLogging 
        logEntireMessage="true" 
        logMalformedMessages="true" 
        logMessagesAtTransportLevel="true" />
    </diagnostics>
  </system.serviceModel>

  <!-- Configuration des diagnostics système -->
  <system.diagnostics>
    <sources>
      <source name="System.ServiceModel" 
              switchValue="Information, ActivityTracing" 
              propagateActivity="true">
        <listeners>
          <add name="xml" />
        </listeners>
      </source>
      <source name="System.ServiceModel.MessageLogging">
        <listeners>
          <add name="xml" />
        </listeners>
      </source>
    </sources>
    <sharedListeners>
      <!-- Définition du fichier de trace pour les diagnostics -->
      <add name="xml" 
           type="System.Diagnostics.XmlWriterTraceListener" 
           initializeData="C:\\Logs\\service.svclog" />
    </sharedListeners>
    <trace autoflush="true" />
  </system.diagnostics>
</configuration>